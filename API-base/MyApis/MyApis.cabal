name:                MyApis
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/githubuser/MyApis#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2017 Author name here
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     MyApi.Query
                     , MyApi.DirectoryServerApi
                     , MyApi.FileApi
                     , MyApi.FileServerApi
  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , servant-client
                     , servant
                     , wai
                     , warp
                     , http-client
                     , http-media
  default-language:    Haskell2010

executable MyApis-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , MyApis
  default-language:    Haskell2010

test-suite MyApis-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , MyApis
                     , hspec
                     , hspec-wai
                     , hspec-wai-json
                     , aeson
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/MyApis
